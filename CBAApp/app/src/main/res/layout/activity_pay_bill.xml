<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearPB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucia.cba_app.PayBill"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Pay New Bill"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/payeetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Payee"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/alegreya_sans" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <Spinner
        android:id="@+id/spinner"
        app:fontFamily="@font/alegreya_sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to Send"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            app:fontFamily="@font/alegreya_sans"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:text="200.00" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Account"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/alegreya_sans" />

    <Spinner
        android:id="@+id/spinner2"
        app:fontFamily="@font/alegreya_sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/switchPB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reoccuring Payment"
        android:textSize="24sp"
        app:fontFamily="@font/alegreya_sans" />

    <LinearLayout
        android:id="@+id/reoccuring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment Start Date"
                android:textSize="24sp"
                android:textStyle="bold"
                app:fontFamily="@font/alegreya_sans" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fontFamily="@font/alegreya_sans"
                android:ems="10"
                android:inputType="date" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequency"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <RadioGroup
            android:id="@+id/freq"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:fontFamily="@font/alegreya_sans"
                    android:text="Weekly" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:fontFamily="@font/alegreya_sans"
                    android:text="Monthly" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:fontFamily="@font/alegreya_sans"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="67dp"
                    app:fontFamily="@font/alegreya_sans"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bi-weekly" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/alegreya_sans"
                    android:layout_weight="1"
                    android:text="Anually" />
            </LinearLayout>

        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select when Payment Ends"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fontFamily="@font/alegreya_sans"
                android:text="Set Date" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fontFamily="@font/alegreya_sans"
                android:text="Number of Payments" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fontFamily="@font/alegreya_sans"
                android:text="Don't set" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set Payment End Date"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/alegreya_sans" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date"
                app:fontFamily="@font/alegreya_sans" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Specify number of payments"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/alegreya_sans" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                app:fontFamily="@font/alegreya_sans" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Continue"
            android:textSize="30sp"
            app:fontFamily="@font/alegreya_sans" />
    </LinearLayout>

</LinearLayout>
