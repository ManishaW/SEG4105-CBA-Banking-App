<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedBill$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:fontFamily="@font/alegreya_sans"

        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:text="Bill Payments for Insurance"
            android:textAllCaps="false"
            android:textColor="@color/header"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Payments Sent to "

            android:textSize="24sp"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="GOVERNMENT OF CANADA"
            android:textColor="#3c9b39"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="15dp"
            android:text="Account Number 346785279886"
            android:textColor="#ed4fac4c"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:textSize="24sp"
            app:fontFamily="@font/alegreya_sans"
            android:layout_height="wrap_content"
            android:text="Frequency" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"

            android:text="Bi-weekly"
            android:textColor="#3c9b39"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Amount "

            android:textSize="24sp"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"

            android:text="$123.00"
            android:textColor="#3c9b39"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payments Start Date"

            android:textSize="24sp"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"

            android:text="June 21, 2018"
            android:textColor="#3c9b39"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/alegreya_sans" />

        <TextView
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payments Scheduled to end ??"

            android:textSize="24sp"
            app:fontFamily="@font/alegreya_sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape"
            android:text="Cancel All Future Payments"
            android:textSize="30sp"
            app:fontFamily="@font/alegreya_sans" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>