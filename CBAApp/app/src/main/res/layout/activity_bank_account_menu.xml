<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".BankAccountMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <!---->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chequing"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/alegreya_sans" />

            <LinearLayout
                android:id="@+id/chequing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onClickChequing"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClickChequing"
                    android:text="@string/chequingnum"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:onClick="onClickChequing"
                    android:text="$2000.00"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saving"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/alegreya_sans" />

            <LinearLayout
                android:id="@+id/saving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onClickSaving"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClickSaving"
                    android:text="@string/savingsnum"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:onClick="onClickSaving"
                    android:text="$5481.94"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/saving_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onClickSaving"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClickSaving"
                    android:text="#2423455353434"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:onClick="onClickSaving"
                    android:text="$600.56"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="260dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CREDIT"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/alegreya_sans" />

            <LinearLayout
                android:id="@+id/credit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="onClickCredit"
                android:orientation="horizontal"
                android:padding="10dp"
                app:fontFamily="@font/alegreya_sans">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClickCredit"
                    android:text="@string/crednum"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:onClick="onClickCredit"
                    android:text="$450.00"
                    android:textColor="#FFF"
                    app:fontFamily="@font/alegreya_sans" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>